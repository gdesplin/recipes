  .modal-dialog{ :role => "document"}
    .modal-content
      .modal-header
        %h5#ingredientModelLabel.modal-title= "Find & Add #{@recipe.ingredients.model_name.human}"
        %button.close{ "aria-label" => "Close", "data-dismiss" => "modal", :type => "button" }
          %span{ "aria-hidden" => "true" } Ã—
      .modal-body{ data: { controller: "ingredients"} }
        .form-group
          %input{ data: { target: "ingredients.searchTerm", action: "keyup->ingredients#search"} }
        %ul{ data: { target: "ingredients.searchResults" } }
      .modal-footer
        %button.btn.btn-secondary{ "data-dismiss" => "modal", :type => "button" } Close
        %button.btn.btn-primary{ :type => "button" } Save changes
